#!/usr/bin/env bash
#
# vpnctl â€” manage multiple OpenVPN profiles via a YAML config.
# Supports:
#   -d/--debug, -v/--verbose   debug mode (stream logs)
#   -k/--kill                  cleanup all old VPN interfaces & routes before start
#   -p/--profile <key>         choose profile
# Actions: start|up, stop|down, status
# Requires: yq (MikeFarah/yq or python-yq), openvpn, sudo

set -euo pipefail

CONFIG_FILE="${XDG_CONFIG_HOME:-$HOME/.config}/vpn_config.yaml"
DEBUG=false
KILL_OLD=false
PROFILE_KEY=""
ACTION=""

# â”€â”€â”€ Parse args â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
while [[ $# -gt 0 ]]; do
  case "$1" in
    -d|--debug|-v|--verbose)
      DEBUG=true; shift ;;
    -k|--kill)
      KILL_OLD=true; shift ;;
    -p|--profile)
      shift
      [[ -z "$1" || "$1" == -* ]] && { echo "âŒ Missing profile after -p" >&2; exit 1; }
      PROFILE_KEY="$1"; shift ;;
    start|up|stop|down|status)
      [[ -n "$ACTION" ]] && { echo "âŒ Multiple actions: $ACTION and $1" >&2; exit 1; }
      ACTION="$1"; shift ;;
    *)
      echo "âŒ Unknown argument: $1" >&2
      echo "Usage: vpnctl [-d|-v] [-k] [-p profile] <start|up|stop|down|status>" >&2
      exit 1 ;;
  esac
done

# â”€â”€â”€ Require an action â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
[[ -n "$ACTION" ]] || { echo "âŒ No action specified." >&2; exit 1; }

# â”€â”€â”€ Preconditions â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
[[ -f "$CONFIG_FILE" ]] || { echo "âŒ Config file not found: $CONFIG_FILE" >&2; exit 1; }
command -v yq &>/dev/null || { echo "âŒ 'yq' not found; please install." >&2; exit 1; }

# â”€â”€â”€ Auto-select first profile if none specified â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
if [[ -z "$PROFILE_KEY" ]]; then
  if yq --version 2>&1 | grep -q 'eval'; then
    RAW_KEY=$(yq eval -r '.vpn | keys | .[0]' "$CONFIG_FILE")
  else
    RAW_KEY=$(yq '.vpn | keys | .[0]' "$CONFIG_FILE")
  fi
  PROFILE_KEY="${RAW_KEY//\"/}"
fi

# â”€â”€â”€ Load raw .ovpn path from YAML â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
if yq --version 2>&1 | grep -q 'eval'; then
  RAW_CONF=$(yq eval -r ".vpn.${PROFILE_KEY}.config" "$CONFIG_FILE" 2>/dev/null)
else
  RAW_CONF=$(yq ".vpn.${PROFILE_KEY}.config" "$CONFIG_FILE" 2>/dev/null)
  RAW_CONF="${RAW_CONF%\"}"; RAW_CONF="${RAW_CONF#\"}"
  RAW_CONF="${RAW_CONF%\'}"; RAW_CONF="${RAW_CONF#\'}"
fi
[[ -n "$RAW_CONF" && "$RAW_CONF" != "null" ]] || {
  echo "âŒ No config for profile '$PROFILE_KEY' in $CONFIG_FILE" >&2; exit 1
}

# â”€â”€â”€ Normalize & expand path â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
RAW_CONF="${RAW_CONF/#\~/$HOME}"
VPN_CONF=$(eval echo "\"$RAW_CONF\"")
[[ -f "$VPN_CONF" ]] || { echo "âŒ VPN config not found: $VPN_CONF" >&2; exit 1; }

# â”€â”€â”€ Paths & helper â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
USER_ID=$(id -u)
PID_FILE="/run/user/${USER_ID}/${PROFILE_KEY}.pid"
LOG_FILE="/tmp/${PROFILE_KEY}.log"

prepare_sudo(){
  sudo -n true &>/dev/null || { echo "ðŸ”’ Requesting sudo credentials..."; sudo -v || { echo "âŒ sudo auth failed." >&2; exit 1; }; }
}

# â”€â”€â”€ start_vpn â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
start_vpn(){
  # â”€â”€ optional cleanup of old VPNs â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
  if [[ "$KILL_OLD" == true ]]; then
    echo "ðŸ§¹ Cleaning up all tun* interfaces, routes, DNS caches and OpenVPN processesâ€¦"
    # delete all tun* devices
    for dev in $(ls /sys/class/net | grep '^tun'); do
      sudo ip link delete "$dev" &>/dev/null || true
      sudo ip route flush dev "$dev" &>/dev/null || true
    done
    # flush route cache and DNS
    sudo ip route flush cache &>/dev/null || true
    resolvectl flush-caches &>/dev/null || true
    # kill any lingering openvpn
    sudo pkill openvpn &>/dev/null || true
  fi

  if [[ -f "$PID_FILE" ]] && kill -0 "$(cat "$PID_FILE")" &>/dev/null; then
    echo "ðŸ”„ '$PROFILE_KEY' already running (PID $(<"$PID_FILE"))."
    return
  fi

  prepare_sudo
  echo "ðŸš€ Starting '$PROFILE_KEY' â†’ $VPN_CONF"

  nohup sudo openvpn --config "$VPN_CONF" >"$LOG_FILE" 2>&1 &
  echo $! >"$PID_FILE"
  echo "âœ… Started (PID $(<"$PID_FILE")). Logs at $LOG_FILE"

  if [[ "$DEBUG" == true ]]; then
    echo "--- Debug mode: streaming logs (Ctrl+C stops debug only) ---"
    trap 'echo "ðŸ›‘ Exiting debug mode"; kill "$TAIL_PID" 2>/dev/null; exit 0' SIGINT
    tail -n +1 -F "$LOG_FILE" &
    TAIL_PID=$!
    wait "$TAIL_PID"
    trap - SIGINT
  fi
}

# â”€â”€â”€ stop_vpn â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
stop_vpn(){
  if [[ -f "$PID_FILE" ]]; then
    PID=$(<"$PID_FILE")
    if kill -0 "$PID" &>/dev/null; then
      echo "ðŸ›‘ Stopping '$PROFILE_KEY' (PID $PID)â€¦"
      sudo kill "$PID" && rm -f "$PID_FILE"
      echo "âœ… Stopped."
    else
      echo "âš ï¸ Process $PID not found; removing stale PID."
      rm -f "$PID_FILE"
    fi
  else
    echo "â„¹ï¸ '$PROFILE_KEY' is not running."
  fi
}

# â”€â”€â”€ status_vpn â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
status_vpn(){
  if [[ -f "$PID_FILE" ]] && kill -0 "$(cat "$PID_FILE")" &>/dev/null; then
    echo "âœ… '$PROFILE_KEY' is running (PID $(<"$PID_FILE"))."
  else
    echo "âŒ '$PROFILE_KEY' is not running."
  fi
}

# â”€â”€â”€ Dispatch â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
case "$ACTION" in
  start|up)   start_vpn ;;
  stop|down)  stop_vpn  ;;
  status)     status_vpn ;;
esac

